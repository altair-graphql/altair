{
  "compilerOptions": {
    "outDir": "build/",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "target": "es2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "esnext"
    ],
    "types": [
      "node"
    ],
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
  }
}
